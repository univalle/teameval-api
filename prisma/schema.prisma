generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  PROFESSOR
  STUDENT
  ADMIN
}

model User {
  id          String      @id 
  email       String      @unique
  code        String      @unique
  name        String
  password    String
  document    String
  type        String
  gender      String
  phone       String
  role        Role
}


model Course {
  id          String      @id
  code        String      @unique
  name        String
  description String
  period      String
}

model Group {
  id          String      @id
  code        String      @unique
  name        String
}

model StudentGroup {
  id          String      @id
  groupId     String
  studentId   String
}

model ProfessorCourse {
  id          String      @id
  professorId String
  courseId    String
}

model StudentCourse {
  id          String      @id
  studentId   String
  courseId    String
}

model Evaluation {
  id          String      @id
  code        String      @unique
  name        String
  description String
}

model Criteria {
  id          String      @id
  code        String      @unique
  name        String  
  description String
  weight      String
}

model EvaluationCriteria {
  id              String      @id
  evaluationId    String
  criteriaId      String
}

model StudentGroupEvaluation {
  id              String      @id
  evaluationId    String
  groupId         String
  studentId       String
}

model CriteriaStudentResult {
  id              String      @id
  result          Int
  criteriaId      String
  studentId       String
}